{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2022"],
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,

    "outDir": "lib"
  },

  "include": ["src/**/*"]
}